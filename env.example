# College Football Data API Configuration
COLLEGE_FOOTBALL_DATA_API_KEY=your_api_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ncaa_football

# Alternative: Use DuckDB (set USE_DUCKDB=true and leave DATABASE_URL empty)
USE_DUCKDB=false
DUCKDB_PATH=data/ncaa_football.db

# Dashboard Configuration
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/ncaa_football.log

# Machine Learning Configuration
ML_RANDOM_STATE=42
TRAIN_TEST_SPLIT=0.8
CV_FOLDS=5

# API Rate Limiting
API_TIMEOUT=30
API_RATE_LIMIT=100


